<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6" >
    <include layout="@layout/nav_view"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
       	android:layout_marginRight="10dip"
        android:orientation="vertical">    
        <EditText 
			android:id="@+id/name"
	        android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"
	       	android:padding="10dip"
	       	android:hint="请输入昵称"
	       	android:layout_marginTop="15dip"
      		android:layout_marginLeft="10dip"
      		android:layout_marginRight="10dip"
       		android:singleLine="true"
       		android:textSize="18sp"       		
        	android:background="@drawable/list_blockbg_normal"/>   
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText 
	            android:id="@+id/pass"
	            android:inputType="textPassword"
	            android:hint="请输入密码"
	            android:layout_marginTop="7dip"
	       		android:layout_marginLeft="10dip"
	       		android:layout_marginRight="10dip"
	            android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="10dip"
	        	android:singleLine="true"
	        	android:textSize="18sp"
        		android:background="@drawable/list_blockbg_normal"/>
            <ImageView 
                android:id="@+id/login_show_mima"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"      
                android:layout_marginRight="15dip"          
	        	android:layout_alignParentRight="true"
	        	android:layout_centerVertical="true"
                android:src="@drawable/mima"/>
        </RelativeLayout>       
        <TextView 
            android:id="@+id/login"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:text="登    录"
       		android:textSize="18sp"
       		android:layout_marginTop="15dip"
       		android:layout_marginLeft="10dip"
       		android:layout_marginRight="10dip"
       		android:padding="10dip"
       		android:gravity="center"
       		android:textColor="@android:color/white"
       		android:background="@drawable/anniu_lan_sel"/>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginLeft="10dip"
     	android:layout_marginRight="10dip">
        <TextView 
            android:id="@+id/regist"
            android:layout_gravity="center"
            android:layout_width="120dip"
       		android:layout_height="wrap_content"
       		android:text="注    册"
       		android:textSize="18sp"
       		android:paddingLeft="10dip"
       		android:paddingRight="10dip"
       		android:paddingTop="5dip"
       		android:paddingBottom="5dip"
       		android:gravity="center"
       		android:textColor="@android:color/white"
       		android:background="@drawable/anniu_lv_sel"/>
        <TextView 
            android:id="@+id/no_user_login"
            android:layout_gravity="center"
            android:layout_width="120dip"
       		android:layout_height="wrap_content"
       		android:text="随便逛逛"
       		android:textSize="18sp"
       		android:paddingLeft="10dip"
       		android:paddingRight="10dip"
       		android:paddingTop="5dip"
       		android:paddingBottom="5dip"
       		android:gravity="center"
       		android:layout_alignParentRight="true"
       		android:textColor="@android:color/white"
       		android:background="@drawable/anniu_lv_sel"/>
    </RelativeLayout>
    <TextView 
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:text="其他登陆方式："
   		android:textSize="18sp"
   		android:padding="10dip"
        android:layout_margin="10dip"
   		android:textColor="#636963"/>
    <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/list_blockbg_normal">
        <RelativeLayout 
            android:layout_margin="10dip"
            android:id="@+id/account_icon_weibo"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
            <ImageView 
                android:src="@drawable/account_icon_weibo"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>            
           	<ImageView 
				android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
               	android:id="@+id/account_icon_weibo_right"
	            android:src="@drawable/jiantou"
	            android:layout_width="wrap_content"
	       		android:layout_height="wrap_content"/>
           	<TextView 
           	    android:layout_toLeftOf="@id/account_icon_weibo_right"
	            android:text="新浪微博登陆"
	            android:textSize="18sp"
	            android:layout_marginLeft="50dip"
	            android:textColor="@android:color/black"
	            android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View 
            android:background="@drawable/list_blockbg_divider" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0dip" />
	    <RelativeLayout 
            android:layout_margin="10dip"
            android:id="@+id/account_icon_qzone"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
            <ImageView 
                android:src="@drawable/account_icon_qzone"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>            
           	<ImageView 
				android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
               	android:id="@+id/account_icon_qzone_right"
	            android:src="@drawable/jiantou"
	            android:layout_width="wrap_content"
	       		android:layout_height="wrap_content"/>
           	<TextView 
           	    android:layout_toLeftOf="@id/account_icon_qzone_right"
	            android:text="腾讯QQ登陆"
	            android:textSize="18sp"
         	    android:layout_marginLeft="50dip"	            
	            android:textColor="@android:color/black"
	            android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>