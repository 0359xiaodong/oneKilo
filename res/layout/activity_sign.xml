<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6" >
    <TextView 
        android:id="@+id/geo_record_state"
        android:text="正在签到。。。"
        android:textSize="22sp"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="20dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <RelativeLayout 
        android:id="@+id/sign_image_layout"
        android:layout_below="@id/geo_record_state"       
        android:layout_centerHorizontal="true"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:layout_marginTop="100dip"
	    android:layout_marginBottom="100dip">
        <net.frakbot.imageviewex.ImageViewEx	         
		    android:id="@+id/sign_imageViewEx1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/sign_fail"/>
        <ImageView         
		    android:id="@+id/sign_image_fail"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    android:src="@drawable/sign_fail"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_below="@id/sign_image_layout"
        android:layout_centerHorizontal="true"        
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
        <TextView         
	        android:id="@+id/geo_record_button"
	        android:background="@drawable/qiandao_sel"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:paddingLeft="20dip"
	        android:paddingRight="20dip"
	        android:textColor="@android:color/white"
	        android:layout_width="130dip"
	        android:layout_margin="10dip"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:text="再试一次"/>
		<TextView 
		    android:layout_toRightOf="@id/geo_record_button"
		    android:id="@+id/geo_stop_button"
		    android:background="@drawable/quxiao_sel"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:paddingLeft="20dip"
	        android:paddingRight="20dip"
	        android:layout_width="90dip"
	        android:textColor="@android:color/white"
	        android:layout_margin="10dip"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:text="关闭"/>
    </RelativeLayout>

</RelativeLayout>
