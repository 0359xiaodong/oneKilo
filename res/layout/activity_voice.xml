<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6" >
    <TextView 
        android:id="@+id/voice_record_state"
        android:textSize="22sp"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="20dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <RelativeLayout 
        android:id="@+id/voice_imageViewEx_layout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	    android:layout_margin="100dip">
        <net.frakbot.imageviewex.ImageViewEx
            android:layout_centerHorizontal="true"
		    android:id="@+id/voice_imageViewEx1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/voice_default"/>
        <net.frakbot.imageviewex.ImageViewEx
            android:layout_centerHorizontal="true"
		    android:id="@+id/voice_imageViewEx2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/voice_default"/>
        <net.frakbot.imageviewex.ImageViewEx
            android:layout_centerHorizontal="true"
		    android:id="@+id/voice_imageViewEx3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/voice_default"/>
        <ImageView 
            android:id="@+id/voice_default_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/voice_default"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_below="@id/voice_imageViewEx_layout"
        android:layout_centerHorizontal="true"        
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
        <TextView         
	        android:id="@+id/voice_record_button"
	        android:background="@drawable/qiandao_sel"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:paddingLeft="20dip"
	        android:paddingRight="20dip"
	        android:textColor="@android:color/white"
	        android:layout_width="130dip"
	        android:layout_margin="10dip"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:text="说完发送"/>
		<TextView 
		    android:layout_toRightOf="@id/voice_record_button"
		    android:id="@+id/voice_stop_button"
		    android:background="@drawable/quxiao_sel"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:paddingLeft="20dip"
	        android:paddingRight="20dip"
	        android:layout_width="90dip"
	        android:textColor="@android:color/white"
	        android:layout_margin="10dip"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:text="关闭"/>
    </RelativeLayout>
    
</RelativeLayout>
