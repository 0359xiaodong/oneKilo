<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dip" >
        <ImageView 
	        android:id="@+id/adapter_message_image"
	    	android:layout_margin="5dip"
	    	android:layout_width="50dip"
	    	android:layout_height="50dip"/>
        <TextView 
            android:id="@+id/adapter_message_noread"
            android:background="@drawable/new_notify"
            android:layout_marginLeft="43dip"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingBottom="3dip"
	    	android:layout_width="22dip"
	    	android:layout_height="22dip"/>
    </RelativeLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dip"
    	android:orientation="vertical" >
		<TextView 
		    android:id="@+id/adapter_message_title"
	    	android:layout_width="wrap_content"
	    	android:textSize="18sp"
	    	android:layout_marginTop="7dip"
	    	android:textColor="@android:color/black"
	    	android:layout_height="wrap_content"/>
        
		<TextView 
		    android:id="@+id/adapter_message_text"
	    	android:layout_width="wrap_content"
	    	android:textSize="13sp"
	    	android:layout_marginTop="7dip"
	    	android:textColor="@android:color/darker_gray"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
