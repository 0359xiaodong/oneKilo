<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip" 
    android:background="@drawable/nav_bg">
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="70dip"
    	android:layout_marginRight="70dip"
    	android:layout_centerVertical="true"
    	android:orientation="horizontal" >
        <TextView 
            android:id="@+id/left_tab"
            android:layout_weight="1"
	    	android:textColor="@android:color/white"
	    	android:textSize="16sp"
	    	android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tab_left_press"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" />
        <TextView 
            android:id="@+id/right_tab"
            android:layout_weight="1"
	    	android:textColor="@android:color/white"
	    	android:textSize="16sp"
	    	android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tab_right_nor"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content" />
    </LinearLayout>
	<LinearLayout 
        android:id="@+id/nav_add_layout"
	    android:layout_marginRight="11dip"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:background="@drawable/xz_sel"
	    android:gravity="center"
	    android:visibility="invisible">
        <ImageView 
		    android:id="@+id/nav_add_image"
		    android:padding="7dip"
		    android:src="@drawable/nav_choice"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/nav_back_layout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dip"
        android:visibility="invisible"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:background="@drawable/xz_sel"
	    android:gravity="center">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:padding="7dip"
	        android:src="@drawable/fanhui"/>
	</LinearLayout>	
</RelativeLayout>
